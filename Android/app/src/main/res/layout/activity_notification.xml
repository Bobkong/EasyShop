<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdfdfd"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.squareup.shopx.widget.shadow.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:shadowRadius="16dp"
        app:xOffset="0dp"
        app:yOffset="10dp"
        app:blurRadius="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shadowColor="#0D000000">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/merchant_item_card_bg">

                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="205dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="44dp"
                    android:src="@drawable/enroll_success_illustration"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/title_large"
                    android:textColor="@color/black_0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="276dp"
                    android:text="Enable Notifications"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/body_medium"
                    android:textColor="@color/black_40"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="320dp"
                    android:textAlignment="center"
                    android:text="Congratulations! You have signed up successfully. Do you want to receive notifications about nearby discounts and loyalty programs?"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="425dp"
                    android:paddingBottom="24dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/no_notification"
                        android:layout_width="134dp"
                        android:layout_height="wrap_content"
                        android:text="No, thanks"
                        android:textAlignment="center"
                        style="@style/label_medium"
                        android:layout_marginRight="6dp"
                        android:textColor="@color/black_0"
                        android:background="@drawable/black95_button_r24_solid"
                        />

                    <TextView
                        android:id="@+id/confirm"
                        android:text="Confirm"
                        android:layout_width="134dp"
                        android:layout_height="wrap_content"
                        style="@style/label_medium"
                        android:layout_marginLeft="6dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="@drawable/primary_long_button_r24"
                        />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.squareup.shopx.widget.shadow.ShadowLayout>



</androidx.constraintlayout.widget.ConstraintLayout>