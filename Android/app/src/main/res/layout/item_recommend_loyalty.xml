<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="271dp"
    android:layout_height="324dp"
    android:layout_marginRight="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.squareup.shopx.widget.RoundRectImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:radius="20dp"
        android:id="@+id/recommend_bg"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recommend_title"
        android:text="Redeem your exclusive rewards!"
        style="@style/title_medium"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black_0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="242dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recommend_merchant_name"
        android:text="test"
        style="@style/headline_large_secondary"
        android:textColor="@color/black_0"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="198dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recommend_tag"
        android:text="Rewards"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        style="@style/label_large"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/recommend_merchant_tag"/>

</androidx.constraintlayout.widget.ConstraintLayout>
