<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_0"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/intro_img"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/app_intro_img"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/intro_title"
        android:text="ShopX"
        style="@style/display_large"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintTop_toBottomOf="@+id/intro_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Discover discounts and loyalty programs, immerse yourself in AR experiences, and order with ease â€“ all in one convenient app."
        style="@style/body_large"
        android:textColor="@color/black_70"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:id="@+id/intro_desc"
        app:layout_constraintTop_toBottomOf="@+id/intro_title"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sign_up"
        android:text="Sign up"
        style="@style/title_medium"
        android:textColor="@color/white"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintTop_toBottomOf="@+id/intro_desc"
        android:layout_width="match_parent"
        android:layout_marginTop="36dp"
        android:background="@drawable/primary_long_button_r16"
        android:textAlignment="center"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sign_in"
        android:text="Sign in"
        style="@style/title_medium"
        android:textColor="@color/white"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>