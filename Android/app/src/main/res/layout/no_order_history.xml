<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="120dp"
    android:id="@+id/no_order_history"
    android:background="#fdfdfd">

    <com.squareup.shopx.widget.shadow.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shadowRadius="16dp"
        app:xOffset="0dp"
        app:yOffset="10dp"
        app:blurRadius="16dp"
        app:shadowColor="#0D000000"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_r16"
            android:paddingBottom="48dp">
            <ImageView
                android:layout_width="274dp"
                android:layout_height="208dp"
                android:src="@drawable/no_loyalty_card_illustration"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="36dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/title_large"
                android:textColor="@color/black_0"
                android:text="Explore Offers"
                android:layout_marginTop="268dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/body_medium"
                android:textColor="@color/black_40"
                android:textAlignment="center"
                android:text="Seems like you don't have any orders yet. Explore the map for exciting discounts and loyalty rewards!"
                android:layout_marginTop="312dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/label_medium"
                android:id="@+id/go_to_map"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="Go to Map"
                android:background="@drawable/primary_long_button_r32_solid"
                android:layout_marginTop="388dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.squareup.shopx.widget.shadow.ShadowLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
