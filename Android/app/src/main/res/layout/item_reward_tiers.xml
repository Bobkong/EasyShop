<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:id="@+id/reward_tiers_cl"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.squareup.shopx.widget.RoundRectImageView
        app:radius="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/reward_tier_bg"
        android:src="@drawable/reward_tier_2"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/reward_tiers_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="Full Menu"
        style="@style/title_small"
        android:layout_marginTop="16dp"
        android:textColor="@color/black_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/order_redeem_button_bg"
        android:text="Redeem"
        android:id="@+id/redeem"
        android:textColor="@color/black_0"
        />



</androidx.constraintlayout.widget.ConstraintLayout>