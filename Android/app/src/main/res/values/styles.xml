<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name = "NoActionBar" parent = "@style/AppTheme">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>

    </style>

    <style name = "AppTheme" parent = "Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
    </style>
    
    <style name="display_medium">
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/cambon_medium</item>
    </style>

    <style name="display_large">
        <item name="android:textSize">45sp</item>
        <item name="android:fontFamily">@font/cambon_bold</item>
    </style>

    <style name="headline_large">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/cambon_bold</item>
    </style>

    <style name="headline_large_secondary">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/manrope_extrabold</item>
    </style>

    <style name="headline_medium">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/cambon_medium</item>
    </style>

    <style name="headline_small">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/cambon_regular</item>
    </style>

    <style name="title_large">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
    </style>

    <style name="title_medium">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
    </style>

    <style name="title_medium_secondary">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="title_small">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
    </style>

    <style name="title_small_secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/manrope_semibold</item>
    </style>

    <style name="label_large">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/manrope_semibold</item>
    </style>

    <style name="label_medium">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/manrope_semibold</item>
    </style>

    <style name="label_small">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/manrope_semibold</item>
    </style>

    <style name="body_large">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="body_medium">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="body_small">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 遮罩层 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

</resources>